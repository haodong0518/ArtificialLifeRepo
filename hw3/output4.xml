
<mujoco>
    <option gravity="0 0 -9.81" timestep="0.001"/>
    <compiler coordinate="local"/>
    <worldbody>
    <light diffuse="0.8 0.8 0.8" pos="0 0 3" dir="0 0 -1"/>
    <geom type="plane" size="5 5 0.1" rgba="255 255 255 0.6"/>
        <!-- First box -->
        <body name="box1" pos="0 0 0">
            <geom type="box" size="0.1 0.1 0.1" rgba = "0 0 0 0.2" /> <!-- Size of the first box -->
            <!-- Slide joint definition -->
            <joint name="slide_joint" type="slide" pos="0 0 0" axis="1 0 0" /> <!-- Slides along the X-axis -->
            <!-- Second box connected via the slide joint -->
            <body name="box2" pos="0.2 0 0"> <!-- Initial position is set to show the boxes are separated -->
                <geom type="box" size="0.1 0.1 0.1" rgba = "1 1 0 0.2"/> <!-- Size of the second box -->
            </body>
        </body>
    </worldbody>
    <actuator>
        <!-- Actuator to control the slide joint -->
        <motor name="slide_motor" joint="slide_joint" ctrlrange="-1 1" gear="0.1"/>
    </actuator>
    <asset>
        <material name="MatBox1" rgba="0.8 0.3 0.3 0.2"/>
        <material name="MatBox2" rgba="0.3 0.3 0.8 0.2"/>
    </asset>
</mujoco>
